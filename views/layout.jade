doctype html
html(lang='en', ng-app='oseam-app')
  head
    meta(name="theme-color", content="#009688")
    meta(name='viewport', content='initial-scale=1')
    block title
    link(rel='stylesheet', href='https://ajax.googleapis.com/ajax/libs/angular_material/0.9.0/angular-material.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic')
    link(rel="stylesheet", href="/stylesheets/css/importer.css")
    link(rel="stylesheet", href="/stylesheets/css/md-date-time.css")
    link(rel="stylesheet", href="/stylesheets/css/material.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel="manifest", href="/manifest.json")
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    script(src="https://code.jquery.com/jquery-1.10.2.js")
  body(layout='column', ng-controller='AppCtrl')
    md-toolbar(layout='row')
      .md-toolbar-tools
        button.menuBtn(ng-click="toggleSidenav('left')", hide-gt-sm='')
          span.visually-hidden.hidden Menu
        h1.md-toolbar-tools(layout-align-gt-sm='center') 
          block header
        span(flex)
        md-button.md-icon-button(aria-label='Notifications', hide-sm)
          md-icon(md-svg-icon='/images/notification.svg', style='color: white;', ng-click='getNotifications()')
        md-button.md-icon-button(aria-label='More')
          md-icon(md-svg-icon='/images/more_vert.svg', layout-align-gt-sm='right')
    div(layout='row', flex)
      md-sidenav.md-sidenav-left.md-whiteframe-z1(layout='column', md-component-id='left', md-is-locked-open="$mdMedia('gt-sm')")
        .navigation-content 
          md-list
            md-subheader.md-no-sticky Navigation
            a(href='{{ primary.url }}', ng-repeat='primary in links', ng-scope, md-clickable).nav-link
              md-list-item
                button.md-no-style.md-button.md-default-theme(tabindex='0')
                  .md-list-item-inner.ng-scope(layout='row', flex)
                    img.md-avatar(alt='{{ primary.name }}', ng-src='{{ primary.img }}')
                    p {{ primary.name }}
                  .md-ripple-container(style='')
      block content
      // Angular Material Dependencies
      script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
      script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-route.js')
      script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js')
      script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js')
      script(src='https://ajax.googleapis.com/ajax/libs/angular_material/0.9.0/angular-material.min.js')
      script(src='/js/md-date-time.js')
      script(src='/js/app.js')
      script(src='/js/settings.js')
